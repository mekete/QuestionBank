<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_register_organism"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/card_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <!-- title-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        android:layout_marginTop="0dip"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/card_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/card_margin"
            android:orientation="vertical">

            <TextView
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_margin"
                android:text="Remark for this question" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/radb_source_urine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_toggle_button"
                    android:button="@null"
                    android:layout_marginRight="@dimen/card_margin"
                    android:checked="true"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/card_border_radius"
                    android:paddingTop="@dimen/card_border_radius"
                    android:text="@string/question_tag_tricky"
                    android:textColor="@color/brokenWhite" />


                <CheckBox
                    android:id="@+id/radb_source_blood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                      android:layout_weight="1"
                    android:background="@drawable/bg_toggle_button"
                    android:button="@null"
                    android:layout_marginRight="@dimen/card_margin"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/card_border_radius"
                    android:paddingTop="@dimen/card_border_radius"
                    android:text="@string/question_tag_vague"
                    android:textColor="@color/brokenWhite" />

                <CheckBox
                    android:id="@+id/radb_source_non_urine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_toggle_button"
                    android:button="@null"
                    android:checked="true"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/card_border_radius"
                    android:paddingTop="@dimen/card_border_radius"
                    android:text="@string/question_tag_try_later"
                    android:textColor="@color/brokenWhite" />
            </LinearLayout>


            <EditText
                android:id="@+id/txte_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edit_text"
                android:gravity="left|top"
                android:minLines="3"
                android:padding="@dimen/card_margin" />


            <Button
                android:id="@+id/btnn_save_remark"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:padding="@dimen/card_margin"
                android:text="@string/save" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>